<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_purple_900"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.fernando.alarmaproyecto.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/bubblegum_sans"
        android:text="Eventos para hoy"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/md_text_white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textoHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/bubblegum_sans"
        android:text="Hora:"
        android:textColor="@color/md_text_white"
        android:textSize="24sp" />

    <Switch
        android:id="@+id/activar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textoHora"
        android:layout_alignParentEnd="true"
        android:checked="false"
        android:textOff="Desactivada"
        android:textOn="Activada"
        tools:checked="false" />
</RelativeLayout>
